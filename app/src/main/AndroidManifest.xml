<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lanou.gift">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".base.MyApp">



        <activity android:name=".activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.GuideActivity"/>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.EnterActivity"/>
        <activity android:name=".search.SearchActivity"/>
        <activity android:name=".activity.SettingActivity"/>
        <activity android:name=".hot.second.HotActivity"/>
        <activity android:name=".sorthead.secondone.OneActivity"/>
        <activity android:name=".sorthead.secondraiders.RaidersActivity"/>
        <activity android:name=".sorthead.secondraiders.RaidersHeadActivity"/>
        <activity android:name=".sorthead.raiders.RaidersAllActivity"/>
        <activity android:name=".search.test.SearchSecondActivity"/>
        <activity android:name=".activity.EnterTwoActivity"/>
    </application>

</manifest>