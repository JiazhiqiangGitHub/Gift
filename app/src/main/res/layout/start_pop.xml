<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_pop_one"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="250dp">
        <TextView
            android:layout_marginTop="20dp"
            android:text="选择性别"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@mipmap/backblack"
            android:layout_marginTop="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_gender_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text="男孩"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/img_boy"
                    android:src="@drawable/unselect_btn"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#ffffffff"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView

                    android:layout_gravity="center"
                    android:background="@mipmap/ic_gender_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text="女孩"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/img_gril"
                    android:layout_gravity="center"
                    android:src="@drawable/unselect_btn"
                    android:layout_marginTop="20dp"
                    android:background="#ffffffff"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"/>

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/next_step_btn"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:layout_marginBottom="20dp"
        android:id="@+id/popOne_next"
        />
</LinearLayout>