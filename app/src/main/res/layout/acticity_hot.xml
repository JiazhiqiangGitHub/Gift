<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#AEC9F8"
    >
    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_hot_activity"
        android:background="@mipmap/button_back_white"/>



    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_share_up"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <android.support.design.widget.TabLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/tb_activity_hot"

        android:layout_centerInParent="true">

    </android.support.design.widget.TabLayout>



</RelativeLayout>


    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/vp_activity_hot">

    </android.support.v4.view.ViewPager>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_heart_unselected"
        android:id="@+id/iv_hot_activity_favour"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/icon_share_up"
        android:layout_toRightOf="@+id/iv_hot_activity_favour"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:background="#F02B42"
        android:text="去天猫购买"
        android:textColor="#FFFFFF"/>

</RelativeLayout>





</LinearLayout>