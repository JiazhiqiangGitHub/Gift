<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/rv_hot_activity">

    </android.support.v7.widget.RecyclerView>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_heart_unselected"
        android:id="@+id/iv_hot_activity_favour"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/icon_share_up"
        android:layout_toRightOf="@+id/iv_hot_activity_favour"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:background="#F02B42"
        android:text="去天猫购买"
        android:textColor="#FFFFFF"/>

</RelativeLayout>





</LinearLayout>