<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:background="@mipmap/signin_bg_night">
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/me_avatar_boy"
    android:layout_centerInParent="true"
    android:id="@+id/iv_mine_boy"
    android:background="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未登录"
        android:layout_below="@+id/iv_mine_boy"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tv_mine"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    <RadioButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:id="@+id/btn_mine_cart"
        android:text="购物车"
        android:drawableTop="@mipmap/icon_cart"
        />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:id="@+id/btn_mine_order"
            android:text="订单"
            android:drawableTop="@mipmap/icon_order"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/btn_mine_coupon"
            android:gravity="center"
            android:text="礼券"
            android:drawableTop="@mipmap/icon_coupon"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:id="@+id/btn_mine_service"
            android:text="客服"
            android:drawableTop="@mipmap/icon_service"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#EBEBEB"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FAFAFA"
        android:layout_marginTop="15dp"
        android:text="单品"
        android:id="@+id/btn_mine_one"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        android:background="#FAFAFA"
        android:layout_marginTop="15dp"
        android:text="攻略"
        android:id="@+id/btn_mine_raider"/>

</LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/favourite"
         android:layout_centerInParent="true"
         android:id="@+id/iv_mine_favourite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢的礼物摆在这里哦"
            android:layout_below="@+id/iv_mine_favourite"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="#A2A2A2"/>

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>